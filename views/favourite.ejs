<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Your Favorites</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include("_header") %>
    <h1 class="featured-title">⭐⭐⭐ Your Favorites! ⭐⭐⭐</h1>
    <section class="favorites-container">
      <%for (let favorite of favorites) {%>
      <div class="product-card">
        <tr>
          <img
            class="featured-image"
            src="<%= favorite.photo_1%>"
            alt="Card image cap"
          />
          <div class="product-name">
            <th><%= favorite.name %></th>
          </div>
          <div class="product-price">
            <th>💲<%= favorite.price %></th>
          </div>
          <th>
            <form
              method="GET"
              action="/users/product/<%=favorite.product_id %>"
              class="product-buttons"
            >
              <button type="submit" class="btn-btn-primary">More Info</button>
            </form>
          </th>
          <th scope="col">
            <form
              method="POST"
              action="/users/favourite/<%=favorite.favorite_id%>/delete"
            >
              <button type="submit" class="btn-btn-primary">
                🔴🔴  Delete This From Favorites...  🔴🔴
              </button>
            </form>
          </th>
        </tr>
      </div>
      <% } %>
    </section>
  </body>
</html>
