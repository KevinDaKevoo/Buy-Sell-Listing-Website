<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Your Messages</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include("_header") %>
    <section class="messages-container">
      <div class="messages-recived">
        <h1>Received From:</h1>
        <%for (let message of messages) {%>
          <%if (message.seller_id === userId) {%>
        <div>
          <label><b>BuyerId:</b> <%=message.user_id%></label>
          <label
            ><b>Product Name:<%=message.product_id%></b>
            <a
              href="http://localhost:8080/users/product/<%=message.product_id%>?"
              ><%=message.name%>
            </a></label
          >
          <label><b>Message:</b> <%=message.content%></label>
        </div>

        <% } else if (userId == 1 && message.is_for_admin) { %>
        <div>
          <label><b>BuyerId:</b> <%=message.user_id%></label>
          <label
            ><b>Product Name:</b>
            <a
              href="http://localhost:8080/users/product/<%=message.product_id%>?"
              ><%=message.name%>
            </a></label
          >
          <label><b>Message:</b> <%=message.content%></label>
        </div>
        <% } %> <% } %>
      </div>
      <div class="messages-sent">
        <h1>Sent Messages:</h1>
        <%for (let message of messages) {%> <%if (message.user_id === userId)
        {%>
        <div>
          <label><b>SellerId:</b> <%=message.seller_id%></label>
          <label
            ><b>Product Name:</b>
            <a
              href="http://localhost:8080/users/product/<%=message.product_id%>?"
              ><%=message.name%>
            </a></label
          >
          <label><b>Product Price:</b>ðŸ’²<%=message.price%></label>
          <label><b>Message:</b> <%=message.content%></label>
        </div>
        <% } %> <% } %>
      </div>
      <div class="messages-page-buttons">
        <button class="reply-message-button" id="reply-message-button">
          Reply To A Message
        </button>
        <div class="reply-message-box" id="reply-message-box">
          <p>Select Seller Id To Send A Message To</p>
          <form method="POST" action="/users/product/reply">
            <select name="contactId" id="contactId">
              <label for="sellerId">Choose a seller:</label>
              <!-- not sure how to implement this post action to get the message.proudctid to redirect to new messages -->
              <%for (let message of messages) {%>
              <option value="<%=message.product_id%>">
                <%=message.seller_id%>
              </option>
              <%}%>
            </select>
            <input type="text" id="name" name="name" /><br />
            <button class="btn-message" id="send-admin-button">Submit</button>
          </form>
        </div>
        <button class="message-admin" id="message-admin">Message Admin</button>
        <div class="message-admin-box" id="message-admin-box">
          <p>Send Message To The Admin</p>

          <form method="POST" action="/users/product/reply">
            <select name="contactId" id="contactId">
              <label for="sellerId">Choose a seller:</label>
              <!-- not sure how to implement this post action to get the message.proudctid to redirect to new messages -->

              <option value="1" selected></option>
            </select>
            <input type="text" id="name" name="name" /><br />
            <input name="is_for_admin" type="checkbox" />
            <button class="btn-message" id="send-admin-button">Submit</button>
          </form>
        </div>
      </div>
