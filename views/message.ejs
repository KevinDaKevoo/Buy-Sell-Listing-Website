  <body>
    <%- include("_header") %>
    <h1>Messages</h1>
    <%for (let message of messages) {%>
    <div class="message">
      <label>BuyerId: <%=message.user_id%></label>
      <label>BuyerName: <%=message.user_name%></label>
      <label>Product Price: <%=message.price%></label>
      <label>SellerId: <%=message.seller_id%></label>
      <label>Product Name: <%=message.name%></label>
      <label>Content: <%=message.content%></label>
      <% } %>
    </div>
    <div>
<button class="reply-message-button" id="reply-message-button">Reply A Message</button>
<div class="reply-message-box" id="reply-message-box">
  <p> Select Seller Id</p>
  <select name="contactId" id="contactId">
    <%for (let message of messages) {%>
      <option value="<%=message.seller_id%>"><%=message.seller_id%></option>
        <%}%>
  </select>
<textarea class="reply-message" id="reply-message"></textarea>
  <button class="btn-message" id="reply-button">Submit</button>
      </div>
